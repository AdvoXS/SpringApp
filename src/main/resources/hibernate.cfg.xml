<?xml version='1.0'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/GYPER</property>
        <property name="connection.username">gyper</property>
        <property name="connection.password">masterkey</property>

        <!-- маппинги классов-->
        <mapping class="com.gyper.entity.Address"/>
        <mapping class="com.gyper.entity.Hobby"/>
        <mapping class="com.gyper.entity.Student"/>
    </session-factory>
</hibernate-configuration>